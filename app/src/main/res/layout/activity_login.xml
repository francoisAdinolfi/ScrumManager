<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.francois.scrummanager.LoginActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <EditText
        android:id="@+id/email"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="250dp"
        android:layout_height="46dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="55dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="251dp"
        android:layout_height="41dp"
        android:ems="10"
        android:hint="Mot de Passe"
        android:inputType="textPassword"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/email"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />


    <Button
        android:id="@+id/subscribe"
        android:layout_width="134dp"
        android:layout_height="48dp"
        android:text="Inscription"
        app:layout_constraintLeft_toRightOf="@+id/login"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/login"
        android:layout_width="134dp"
        android:layout_height="48dp"
        android:layout_marginTop="27dp"
        android:text="Connexion"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        android:layout_marginLeft="39dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <RadioGroup
        android:layout_width="274dp"
        android:layout_height="35dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password"
        android:id="@+id/radioGroup">

        <RadioButton
            android:id="@+id/scrumMaster"
            android:layout_width="137dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:text="Scrum Master"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="168dp" />

        <RadioButton
            android:id="@+id/developper"
            android:layout_width="137dp"
            android:layout_height="35dp"
            android:layout_marginEnd="8dp"
            android:text="Developpeur"
            tools:layout_editor_absoluteX="196dp"
            tools:layout_editor_absoluteY="168dp" />

    </RadioGroup>


</android.support.constraint.ConstraintLayout>
